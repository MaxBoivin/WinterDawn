			case "inTheWild":
				
				switch (character.race)
				{
					case "High-Man":
						character.backgroundCost += 6;
					break;
					case "Highland Half-Man":
						character.backgroundCost += 6;
					break;
					case "Lowland Half-Man":
						character.backgroundCost += 3;
					break;
					case "Orc":
						character.backgroundCost += 4;
					break;
					case "Goblin":
						character.backgroundCost += 6;
					break;
					case "Hobgoblin":
						character.backgroundCost += 3;
					break;
					case "Elf":
						character.backgroundCost += 2;
					break;
