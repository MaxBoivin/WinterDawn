			var tempLowestCost = 99;
			switch (selectedOccupationsArray[i].occupationId)
			{
				case "actor":
					for (var j = 0; j < character.backgrounds.careerPath[i].length; j++)
					{
						switch(character.backgrounds.careerPath[i][j])
						{
							case "arts":
								if (5 < tempLowestCost)
								{
									tempLowestCost = 5;
								}
							break;
							case "commerce":
								if (10 < tempLowestCost)
								{
									tempLowestCost = 10;
								}
							break;
							case "crafts":
