<script>
	
	"use strict";
	
	function objSkill (parName, parAttribute, parExp, parRank, parSubSkills)
	{
		this.strName = parName;
		this.strAttribute = parAttribute;
		this.intExp = parExp;
		this.intRank = parRank;
		this.objSubSkills = parSubSkills;
	}
	
	function initSkill()
	{
		var skillsList = 
